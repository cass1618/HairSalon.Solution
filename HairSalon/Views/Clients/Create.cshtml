@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Add a new Client</h3>

@using (Html.BeginForm())
{
  <div class="formbox">
  @Html.Label("first name:")
  @Html.TextBoxFor(model => model.FirstName)
  @Html.Label("last name:")
  @Html.TextBoxFor(model => model.LastName)
  </div>

  @Html.DropDownList("Services", new List<SelectListItem>
    {
    new SelectListItem { Text = "Hair Cut", Value = "Hair Cut"},
    new SelectListItem { Text = "Full Color", Value = "Full Color"},
    new SelectListItem { Text = "Highlights", Value = "Highlights"},
    new SelectListItem { Text = "Blowdry", Value = "Blowdry"},
    })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")


  <input type="submit" value="Add new client" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>