@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FirstName)
  @Html.TextBoxFor(model => model.FirstName)
  @Html.LabelFor(model => model.LastName)
  @Html.TextBoxFor(model => model.LastName)
  @Html.LabelFor(model => model.PriceRange)
  @Html.DropDownList("Services", new List<SelectListItem>
    {
    new SelectListItem { Text = "Hair Cut", Value = "Hair Cut"},
    })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")


  <input type="submit" value="Add new client" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>