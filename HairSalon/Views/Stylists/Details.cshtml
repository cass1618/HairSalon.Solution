@{ 
  Layout = "_Layout"; 
} 

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>
  @Html.DisplayNameFor(model => model.FirstName): @Html.DisplayFor(model =>
  model.FirstName)
  <h3>

    <ul>
      @foreach (Client client in Model.Clients) 
      {
        <li>@Html.ActionLink($"{client.Title}", "Details", "Clients", new { id = client.ClientId})</li>
      }
    </ul>

    <p>
      @Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })
    </p>
    <p>
      @Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })
    </p>
    <p>@Html.ActionLink("Back to list", "Index")</p>
  </h3>
</h3>